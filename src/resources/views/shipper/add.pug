extends ../layout/main.pug

block shipper_nav 
    a(href='/shipper/list' class='flex items-center gap-1 px-8 py-2 relative bg-light-purple text-strong-purple before:absolute before:top-0 before:left-0 before:w-1 before:h-full before:bg-strong-purple')
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
        </svg>
        span Shippers
block content
    form(class='max-w-4xl mx-auto mt-10' method='POST' action="/shipper/store")
        h3(class='text-2xl font-bold mb-6') Add Shipper
        label(for="shipperName" class="block font-semibold mb-1 text-dark-grey") Name:
        input(id='shipperName' name="shipperName" type="text" placeholder="Eg: Nguyen Trong Duy" class="pl-3 py-2 w-80 border text-black placeholder:text-dark-grey focus:outline-none focus:border focus:border-strong-purple rounded-md mb-3")  
        label(for="shipperPhone" class="block font-semibold mb-1 text-dark-grey") Phone number:
        input(id='shipperPhone' name="shipperPhone" type="text" placeholder="Eg: 0981234567" class="pl-3 py-2 w-80 border text-black placeholder:text-dark-grey focus:outline-none focus:border focus:border-strong-purple rounded-md mb-3")  
        button(class='block mt-2 px-3 py-1.5 bg-strong-purple text-white rounded-md cursor-pointer hover:opacity-70') Submit