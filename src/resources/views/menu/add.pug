        input(id='foodPrice' name="foodPrice" type="text" placeholder="Eg: 14.5" class="pl-3 py-2 w-80 border text-black placeholder:text-dark-grey focus:outline-none focus:border focus:border-strong-purple rounded-md mb-3")  
