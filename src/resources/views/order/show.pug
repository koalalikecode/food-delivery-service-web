extends ../layout/main.pug

block order_nav 
    a(href='/shipper/list' class='flex items-center gap-1 px-8 py-2 relative bg-light-purple text-strong-purple before:absolute before:top-0 before:left-0 before:w-1 before:h-full before:bg-strong-purple')
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
        </svg>
        span Orders
block content 
    div(class='max-w-4xl m-auto bg-white mt-10 border rounded-xl')
        div(class='p-4 flex justify-between items-center')
            h3(class='text-2xl font-bold') Order Infomation
            div(class='flex gap-4')
                a(href=`/order/edit/${order.orderID}` class='px-2.5 py-1.5 bg-blue-500 text-white rounded-md cursor-pointer hover:opacity-70 flex gap-1 items-center') 
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />
                    </svg>
                    span Edit        
                a(href='/shipper/add' class='px-2.5 py-1.5 bg-red-500 text-white rounded-md cursor-pointer hover:opacity-70 flex gap-1 items-center') 
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                    </svg>
                    span Delete      
        div(class='px-4 py-10 flex flex-col gap-2')
            div(class="flex")
                p(class='font-semibold w-44') Order ID 
                if order.isOrderGreaterThan10
                    p Or#{order.orderID}
                else
                    p Or0#{order.orderID}
            div(class="flex")
                p(class='font-semibold w-44 ') Customer ID 
                p= customer.CustomerID 
            div(class="flex")
                p(class='font-semibold w-44 ') Customer's name
                p= customer.name 
            div(class="flex")
                p(class='font-semibold w-44 ') Customer's phone
                p= customer.PhoneNumber
            div(class="flex")
                p(class='font-semibold w-44 ') Customer's address
                p= customer.Address
            div(class="flex")
                p(class='font-semibold w-44 ') Shipper ID 
                p= shipper.ShipperID 
            div(class="flex")
                p(class='font-semibold w-44 ') Shipper's name
                p= shipper.name
            div(class="flex")
                p(class='font-semibold w-44 ') Shipper's phone
                p= shipper.PhoneNumber
            div(class="flex")
                p(class='font-semibold w-44 ') Order
                ul 
                    each food in foods
                        li #{food.name}: #{food.Quantity}
            div(class="flex")
                p(class='font-semibold w-44 ') Total money
                p= order.total
